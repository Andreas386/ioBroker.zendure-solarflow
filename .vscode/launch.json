  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "command": "dev-server watch",
      "name": "Start Dev Server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug Both",
      "configurations": [
        "Start Dev Server",
        "Launch Edge",
        "Attach by Process ID"
      ]
    }
  ]
}
